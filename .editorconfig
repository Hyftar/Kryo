root=true

[*]
end_of_line = LF
charset = utf-8
insert_final_newline = true

[*.cs]
indent_style = space
indent_size = 4

[*.{h,cpp}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.{js,py}]
indent_style = space
indent_size = 4

[*.{rb,lua}]
indent_style = space
indent_size = 2

[*.{css,scss,less}]
indent_style = space
indent_size = 4

[*.{xml,html,cshtml}]
indent_style = space
indent_size = 4

[*.json]
indent_style = space
indent_size = 2
